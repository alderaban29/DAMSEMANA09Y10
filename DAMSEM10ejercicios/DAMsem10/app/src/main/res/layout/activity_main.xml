<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonLong"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="159dp" />

    <Button
        android:id="@+id/button2snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/buttonShort"
        app:layout_constraintTop_toBottomOf="@+id/button1snackbar"
        tools:layout_editor_absoluteX="158dp" />

    <Button
        android:id="@+id/button3snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/buttonIndefinido"
        app:layout_constraintTop_toBottomOf="@+id/button2snackbar"
        tools:layout_editor_absoluteX="158dp" />
</androidx.constraintlayout.widget.ConstraintLayout>